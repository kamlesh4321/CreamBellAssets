<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:background="@drawable/b4"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ContentTranscolor"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/SearchViewTheme"
            android:background="@color/colorPrimary" />


        <!-- Footer aligned to bottom -->
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/FooterBackcolor"
            android:gravity="center" >
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:background="@color/Viewcolor"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/FotterTextcolor"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold|italic"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="Developed By : Perfect Software" />
        </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/toolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnAsansol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:visibility="invisible"
            android:gravity="center"
            android:background="@drawable/btnbg2"
            android:textSize="19dip"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:text="ASANSOL" />

       <Button
            android:id="@+id/btnBaddi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"

            android:layout_marginRight="35dp"
            android:gravity="center"
           android:visibility="invisible"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
           android:background="@drawable/btnbg2"
            android:textAllCaps="true"
            android:textSize="19dip"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:text="BADDI" />

        <Button
            android:id="@+id/btnGoa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"

            android:layout_marginRight="35dp"
            android:gravity="center"
        android:visibility="invisible"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:background="@drawable/btnbg2"
            android:textAllCaps="true"
            android:textSize="19dip"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:text="GOA" />

        <Button
            android:id="@+id/btnKosi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:visibility="invisible"
            android:background="@drawable/btnbg2"
            android:textAllCaps="true"
            android:textSize="19dip"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:text="KOSI" />

