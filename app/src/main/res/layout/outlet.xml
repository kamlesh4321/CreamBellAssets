
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
android:background="@drawable/b4"
tools:openDrawer="start">

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent"

         android:background="@color/ContentTranscolor"
         android:alpha="1">
          <android.support.v7.widget.Toolbar
              android:id="@+id/toolbar"
              android:layout_width="match_parent"
              android:layout_height="?attr/actionBarSize"
              android:theme="@style/SearchViewTheme"
              android:background="@color/colorPrimary" />

          <ScrollView
              android:id="@+id/scrollableContents"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_Area"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
               <TextView
                   android:id="@+id/textRegister"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Area"
                   android:layout_weight="2"
                   android:textColor="#DB7219"
                   android:gravity="center_horizontal"
                   />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_Area1"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/sp_Area"
                        android:singleLine="true"
                        android:layout_weight="4"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:gravity="left"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_Area"
                        android:layout_weight="4"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/sp_Town1"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:gravity="left"/>
                    </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_Town"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textTown"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Town"
                        android:layout_weight="2"
                        android:textColor="#DB7219"
                        android:gravity="center_horizontal"
                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_Town1"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/sp_Town"
                        android:singleLine="true"
                        android:layout_weight="4"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:gravity="left"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_Town"
                        android:layout_weight="4"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/sp_PartyName1"
                        android:singleLine="true"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                         />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_PartyName"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textPartyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:layout_weight="2"
                        android:textColor="#DB7219"
                        android:gravity="center_horizontal"
                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_PartyName1"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/sp_PartyName"
                        android:singleLine="true"
                        android:layout_weight="4"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:gravity="left"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_PartyName"
                        android:layout_weight="4"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_Address2"
                        android:singleLine="true"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:gravity="left"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_Address"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:layout_weight="2"
                        android:textColor="#DB7219"
                        android:gravity="center_horizontal"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Address"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_weight="8"
                        android:textSize="@dimen/d14"

                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple_2"
                        android:enabled="false"
                        android:gravity="left"/>


               </LinearLayout>

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/et_Address2"
                   android:layout_weight="10"
                   android:imeOptions="actionNext"
                   android:singleLine="true"
                   android:textSize="@dimen/d14"
                   android:nextFocusForward="@+id/et_Pincode2"
                   android:textColor="@color/black"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:hint="Address"
                    android:layout_marginTop="@dimen/d5"
                   android:background="@drawable/et_simple"
                   android:gravity="left"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_PinCode"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textPinCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:layout_weight="2"
                        android:textColor="#DB7219"
                        android:gravity="center_horizontal"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Pincode"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_firstName"
                        android:singleLine="true"
                        android:layout_weight="4"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple_2"
                        android:enabled="false"
                        android:gravity="left"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Pincode2"
                        android:layout_weight="4"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_Owner2"
                        android:singleLine="true"
                        android:textSize="@dimen/d14"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple"
                        android:gravity="left"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_OwnerName"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textOwner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Owner"
                        android:layout_weight="2"
                        android:textColor="#DB7219"
                        android:gravity="center_horizontal"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Owner"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_firstName"
                        android:singleLine="true"
                        android:layout_weight="4"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple_2"
                        android:enabled="false"
                        android:gravity="left"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Owner2"
                        android:layout_weight="4"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_Contact2"
                        android:singleLine="true"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple"
                        android:gravity="left"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_ContactNo"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textContact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ContactNo"
                        android:layout_weight="2"
                        android:textColor="#DB7219"
                        android:gravity="center_horizontal"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Contact"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_firstName"
                        android:singleLine="true"
                        android:layout_weight="4"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple_2"
                        android:enabled="false"
                        android:gravity="left"/>

                     <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Contact2"
                        android:layout_weight="4"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/btn_TakePhoto"
                        android:singleLine="true"
                         android:inputType="number"
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/et_simple"
                        android:gravity="left"/>
               </LinearLayout>

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/image1"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/white"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_button"
                   android:weightSum="10"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
               <Button
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/btn_TakePhoto"
                   android:text="Take Photo"
                   android:textColor="@color/white"
                   android:layout_weight="5"
                   android:textAllCaps="false"

                   android:nextFocusForward="@+id/btn_signUser"
                   android:textSize="15sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/btn_sign_in_2"/>


               <Button
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/btn_signUser"
                   android:layout_weight="5"
                   android:text="NEXT"
                   android:textColor="@color/white"
                   android:textAllCaps="false"
                   android:textSize="15sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/btn_sign_in_2"/>
</LinearLayout>


          </LinearLayout>
          </ScrollView>

     </LinearLayout>

</android.support.v4.widget.DrawerLayout>
